\newcommand{\rulePiImplM}[1]{
  \begin{myRule}{#1}
    % IMPL
    \AxiomC{$y \# \prog$}
    \AxiomC{\runCmdR{\ConsHdNP{\goalCmd{(y,h[y/x]) + \prog}{g[y/x]}{\alts}}\ConsTlNP{\vecL{g}}}{\alts[']}{\subst}}
